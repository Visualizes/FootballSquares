<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.visual.android.superbowlsquares">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity

            android:screenOrientation="portrait"
            android:name="com.visual.android.superbowlsquares.StartingScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:name="com.visual.android.superbowlsquares.FeedbackErrorActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:name="com.visual.android.superbowlsquares.AboutActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:name="com.visual.android.superbowlsquares.NameInputActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape"
            android:name="com.visual.android.superbowlsquares.MainBoardActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:name="com.visual.android.superbowlsquares.HelpActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:name="com.visual.android.superbowlsquares.PreviewGameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:name="com.visual.android.superbowlsquares.SaveGameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape"
            android:name="com.visual.android.superbowlsquares.BoardSetUpActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:name="com.visual.android.superbowlsquares.GameSelectionActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.visual.android.superbowlsquares.LoadGameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.visual.android.superbowlsquares.JoinGameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.visual.android.superbowlsquares.ShareGameActivity"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>